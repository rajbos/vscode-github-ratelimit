{
	"name": "github-ratelimit",
	"displayName": "GitHub Rate Limit Monitor",
	"description": "Monitors and displays the GitHub API rate limit status",
	"version": "0.0.2",
	"publisher": "justin-grote",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/JustinGrote/vscode-github-ratelimit"
	},
	"bugs": {
		"url": "https://github.com/JustinGrote/vscode-github-ratelimit/issues"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/logo.png",
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "pnpm run build",
		"lint": "eslint",
		"build": "esbuild src/extension.ts --bundle --platform=node --target=node20 --outfile=dist/extension.js --external:vscode --format=cjs"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/vscode": "^1.100.0",
		"esbuild": "^0.25.5",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"@octokit/core": "^7.0.2",
		"@octokit/request": "^10.0.2"
	},
	"packageManager": "pnpm@8.15.4",
	"contributes": {
		"commands": [
			{
				"command": "githubRateLimit.showHistory",
				"title": "Show GitHub Rate Limit History"
			}
		],
		"configuration": {
			"properties": {
				"githubRateLimit.pollIntervalSeconds": {
					"title": "GitHub Rate Limit Polling Interval",
					"type": "number",
					"default": 1,
					"description": "Interval in seconds (can be fractional, e.g. 0.5) for polling the GitHub rate limit."
				},
				"githubRateLimit.historySaveIntervalMinutes": {
					"title": "History Save Interval",
					"type": "number",
					"default": 5,
					"description": "Interval in minutes for saving rate limit history data points. Default is 5 minutes."
				}
			}
		}
	}
}
